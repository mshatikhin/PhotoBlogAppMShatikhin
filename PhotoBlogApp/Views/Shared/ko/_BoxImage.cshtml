@{
    Layout = null;
}
<div class="modal fade" id="image-box" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 100%;height: 100%; margin: 0 auto;text-align: center;">
        <div style="width: 100%;height: 100%;position: absolute;z-index: 100;cursor: pointer;" data-dismiss="modal">
        </div>
        <div class="modal-content" style="background: transparent;display: inline-block;z-index: 200;">
            <div class="modal-body" style="padding: 0;margin: 0;display: inline-block;margin-top:20px;cursor: pointer;">
                <img id="image-box-container" data-dismiss="modal" data-bind="attr:{src: imageUrl(), height: imageHeight()}" />
            </div>
        </div>
    </div>
</div>
